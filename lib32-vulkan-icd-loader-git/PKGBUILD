#######################################

#Set '1' to build with GCC
#Set '2' to build with CLANG
#Default is empty. It will build with GCC. To build with different compiler just use : env _compiler=(1 or 2) makepkg -s
if [ -z ${_compiler+x} ]; then
  _compiler=
fi

#######################################

pkgname=lib32-vulkan-icd-loader-git
pkgdesc='Vulkan Installable Client Driver (ICD) Loader (32-bit) (git version)'
pkgver=1.2.178
pkgrel=1
arch=('i686' 'x86_64')
url='https://github.com/KhronosGroup/Vulkan-Loader'
license=(Apache-2.0)
makedepends=('make' 'cmake' 'extra-cmake-modules' 'python' 'python-lxml' 'libx11' 'libxrandr' 'wayland' 'vulkan-headers' 'git'
             'gcc' 'gcc-libs' 'clang' 'llvm' 'llvm-libs' 'ninja' 'glibc' 'lib32-libx11' 'lib32-libxrandr' 'lib32-wayland'
             'lib32-gcc-libs' 'lib32-clang' 'lib32-llvm' 'lib32-llvm-libs' 'lib32-glibc')
depends=('lib32-glibc')
optdepends=('lib32-vulkan-driver: packaged vulkan driver')
conflicts=('lib32-vulkan-icd-loader')
provides=('lib32-vulkan-icd-loader' 'libvulkan.so' 'lib32-vulkan-icd-loader-git')
source=('Vulkan-Loader::git+https://github.com/KhronosGroup/Vulkan-Loader.git')
md5sums=('SKIP')

pkgver(){
 cd Vulkan-Loader
 echo 1.2.178.$(date -I | sed 's/-/_/' | sed 's/-/_/').$(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}


prepare(){
  cd Vulkan-Loader
  #scripts/update_deps.py
  git clone https://github.com/google/googletest.git external/googletest # optional
}

build(){
if [[ $_compiler = "1" ]]; then
  export CC="gcc"
  export CXX="g++"
elif [[ $_compiler = "2" ]]; then
  export CC="clang"
  export CXX="clang++"
else
  export CC="gcc"
  export CXX="g++"
fi
export PKG_CONFIG=/usr/bin/i686-pc-linux-gnu-pkg-config

  cd Vulkan-Loader

  rm -rf build_32

  cmake -H. -G Ninja -Bbuild_32 \
  -DCMAKE_C_FLAGS=-m32 \
  -DCMAKE_CXX_FLAGS=-m32 \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DVULKAN_HEADERS_INSTALL_DIR=/usr \
  -DCMAKE_INSTALL_LIBDIR=lib32 \
  -DCMAKE_INSTALL_SYSCONFDIR=/etc \
  -DCMAKE_INSTALL_DATADIR=/share \
  -DCMAKE_SKIP_RPATH=True \
  -DBUILD_TESTS=ON \
  -DBUILD_WSI_XCB_SUPPORT=On \
  -DBUILD_WSI_XLIB_SUPPORT=On \
  -DBUILD_WSI_WAYLAND_SUPPORT=On \
  -DCMAKE_BUILD_TYPE=Release \
  -DBUILD_LOADER=ON

  ninja -C build_32
}

package_lib32-vulkan-icd-loader-git(){
  DESTDIR="${pkgdir}" ninja -C Vulkan-Loader/build_32/ install

  # install licence
  install -Dm644 "${srcdir}"/Vulkan-Loader/LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
