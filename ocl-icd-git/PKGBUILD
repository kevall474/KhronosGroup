#######################################

#Set '1' to build with GCC
#Set '2' to build with CLANG
#Default is empty. It will build with GCC. To build with different compiler just use : env _compiler=(1 or 2) makepkg -s
if [ -z ${_compiler+x} ]; then
  _compiler=
fi

#######################################

pkgname=ocl-icd-git
pkgdesc='OpenCL ICD Bindings (git version)'
pkgver=2021.04.29
pkgrel=1
arch=('x86_64')
url="https://github.com/OCL-dev/ocl-icd"
license=('Apache-2.0')
makedepends=('ruby' 'mesa' 'xmlto' 'xmltoman' 'python-xmltodict' 'asciidoc' 'opencl-headers' 'ninja' 'make' 'cmake' 'extra-cmake-modules' 'git'
             'clang' 'llvm' 'llvm-libs' 'gcc' 'gcc-libs')
depends=('glibc')
optdepends=('opencl-driver: packaged opencl driver')
conflicts=('libcl' 'ocl-icd')
replaces=('libcl')
provides=('opencl-icd-loader' 'ocl-icd' 'ocl-icd-git')
source=('OpenCL-ICD-Loader::git+https://github.com/KhronosGroup/OpenCL-ICD-Loader.git')
md5sums=('SKIP')

pkgver(){
 cd OpenCL-ICD-Loader
 echo 2021.04.29.$(date -I | sed 's/-/_/' | sed 's/-/_/').$(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
if [[ $_compiler = "1" ]]; then
  export CC="gcc"
  export CXX="g++"
elif [[ $_compiler = "2" ]]; then
  export CC="clang"
  export CXX="clang++"
else
  export CC="gcc"
  export CXX="g++"
fi

  cd OpenCL-ICD-Loader

  rm -rf build_64

  cmake -H. -G Ninja -Bbuild_64-shared \
  -DCMAKE_C_FLAGS=-m64 \
  -DCMAKE_CXX_FLAGS=-m64 \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DOPENCL_ICD_LOADER_HEADERS_DIR=/usr \
  -DENABLE_OPENCL_LAYERS=ON \
  -DBUILD_SHARED_LIBS=ON \
  -DOPENCL_ICD_LOADER_BUILD_TESTING=ON

  cmake -H. -G Ninja -Bbuild_64-static \
  -DCMAKE_C_FLAGS=-m64 \
  -DCMAKE_CXX_FLAGS=-m64 \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DOPENCL_ICD_LOADER_HEADERS_DIR=/usr \
  -DENABLE_OPENCL_LAYERS=ON \
  -DBUILD_SHARED_LIBS=OFF \
  -DOPENCL_ICD_LOADER_BUILD_TESTING=ON

  ninja -C build_64-shared
  ninja -C build_64-static
}

package_ocl-icd-git(){
  DESTDIR="$pkgdir" ninja -C OpenCL-ICD-Loader/build_64-shared/ install
  DESTDIR="$pkgdir" ninja -C OpenCL-ICD-Loader/build_64-static/ install

  # remove headers. commit : 1cacbf8c358136655c18b5050f0f85e3d403d501
  # install headers
  #install -Dt "$pkgdir"/usr/include/CL/ -m644 OpenCL-ICD-Loader/include/*.h

  # install licence
  install -Dm644 "${srcdir}"/OpenCL-ICD-Loader/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
